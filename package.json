{
  "name": "obsidian-theme-engine",
  "version": "2.2.0",
  "description": "A powerful theme engine for Obsidian. Build dynamic profiles, override themes, and customize your workspace in real time.",
  "main": "main.js",
  "scripts": {
    "build:js": "esbuild src/main.ts --bundle --platform=browser --format=cjs --outfile=main.js --minify --external:obsidian",
    "build:css": "sass src/styles/main.scss styles.css --no-source-map",
    "format": "prettier --write \"src/**/*.{ts,scss}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "build": "npm run format && npm run build:js && npm run build:css",
    "dev": "npm run build && cpy main.js styles.css manifest.json \"C:\\Users\\user\\Documents\\Obsidian\\My Notes\\.obsidian\\plugins\\obsidian-theme-engine\""
  },
  "keywords": [],
  "author": "Yazan Ammar",
  "license": "MIT",
  "dependencies": {
    "sortablejs": "^1.15.7",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/sortablejs": "^1.15.9",
    "@typescript-eslint/utils": "^8.55.0",
    "cpy-cli": "^7.0.0",
    "esbuild": "^0.27.3",
    "esbuild-sass-plugin": "^3.6.0",
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "globals": "^17.3.0",
    "obsidian": "^1.12.0",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
